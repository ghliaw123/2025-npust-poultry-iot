    {
        "id": "fnRules",
        "type": "function",
        "z": "lab2Tab",
        "name": "規則引擎 (超標就告警)",
        "func": "const TH_TEMP=flow.get('th_temp')||30;\nconst TH_RH=flow.get('th_rh')||70;\nconst p=msg.payload||{};\nif(p.temp_c===undefined||p.rh===undefined)return null;\nlet alerts=[];\nconst has_alerted = flow.get('has_alerted') ?? false;\nif(p.temp_c>TH_TEMP&&p.rh>TH_RH){alerts.push(`溫濕同時過高：溫度=${p.temp_c}°C, 濕度=${p.rh}%`);}\nif(alerts.length>0){\n    if(!has_alerted) {\n        const text='[告警] '+new Date().toLocaleString()+'\\n'+alerts.join('\\n');\n        flow.set('has_alerted', true);\n        return [{payload:text},{payload:{text, p}}];\n    }\n    return null;\n}\nelse {\n    if(has_alerted) {\n        flow.set('has_alerted', false);\n        alerts.push(`狀態恢復正常：溫度=${p.temp_c}°C, 濕度=${p.rh}%`);\n        const text = '[通知] ' +new Date().toLocaleString() + '\\n' + alerts.join('\\n');\n        return [{ payload: text }, { payload: { text, p } }];\n    }\n    else return [null, { payload: { text: '狀態正常', p } }];\n}\n",
        "outputs": 2,
        "timeout": "",
        "noerr": 0,
        "initialize": "",
        "finalize": "",
        "libs": [],
        "x": 570,
        "y": 80,
        "wires": [
